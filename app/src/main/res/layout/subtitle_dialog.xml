<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/legendas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/status_do_pedido_no_erp"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <ImageView
            android:id="@+id/imgProcessamento"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_processamento"
            android:src="@drawable/ic_maxima_em_processamento"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/subtitleStatus" />

        <TextView
            android:id="@+id/tvProcessamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/em_processamento_por_parte_do_fv"
            app:layout_constraintBottom_toBottomOf="@id/imgProcessamento"
            app:layout_constraintStart_toEndOf="@id/imgProcessamento"
            app:layout_constraintTop_toTopOf="@id/imgProcessamento" />

        <TextView
            android:id="@+id/icRecusado"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_recusado"
            android:gravity="center"
            android:text="@string/icon_alert"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/imgProcessamento" />

        <TextView
            android:id="@+id/tvRecusado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/pedido_recusado_pelo_erp"
            app:layout_constraintBottom_toBottomOf="@id/icRecusado"
            app:layout_constraintStart_toEndOf="@id/icRecusado"
            app:layout_constraintTop_toTopOf="@id/icRecusado" />

        <TextView
            android:id="@+id/icPendente"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_pendente"
            android:gravity="center"
            android:text="@string/icon_pendente"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/icRecusado" />

        <TextView
            android:id="@+id/tvPendente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/posicao_no_erp_pendente"
            app:layout_constraintBottom_toBottomOf="@id/icPendente"
            app:layout_constraintStart_toEndOf="@id/icPendente"
            app:layout_constraintTop_toTopOf="@id/icPendente" />

        <TextView
            android:id="@+id/icBloqueado"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_bloqueado"
            android:gravity="center"
            android:text="@string/icon_bloqueado"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/icPendente" />

        <TextView
            android:id="@+id/tvBloqueado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/posi_o_no_erp_bloqueado"
            app:layout_constraintBottom_toBottomOf="@id/icBloqueado"
            app:layout_constraintStart_toEndOf="@id/icBloqueado"
            app:layout_constraintTop_toTopOf="@id/icBloqueado" />

        <TextView
            android:id="@+id/icLiberado"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_liberado"
            android:gravity="center"
            android:text="@string/icon_liberado"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/icBloqueado" />

        <TextView
            android:id="@+id/tvLiberado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/posicao_no_erp_liberado"
            app:layout_constraintBottom_toBottomOf="@id/icLiberado"
            app:layout_constraintStart_toEndOf="@id/icLiberado"
            app:layout_constraintTop_toTopOf="@id/icLiberado" />

        <TextView
            android:id="@+id/icMontado"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_montado"
            android:gravity="center"
            android:text="@string/icon_montado"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/icLiberado" />

        <TextView
            android:id="@+id/tvMontado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/posicao_no_erp_montado"
            app:layout_constraintBottom_toBottomOf="@id/icMontado"
            app:layout_constraintStart_toEndOf="@id/icMontado"
            app:layout_constraintTop_toTopOf="@id/icMontado" />

        <TextView
            android:id="@+id/icFaturado"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_faturado"
            android:gravity="center"
            android:text="@string/icon_faturado"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/icMontado" />

        <TextView
            android:id="@+id/tvFaturado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/posicao_no_erp_faturado"
            app:layout_constraintBottom_toBottomOf="@id/icFaturado"
            app:layout_constraintStart_toEndOf="@id/icFaturado"
            app:layout_constraintTop_toTopOf="@id/icFaturado" />

        <TextView
            android:id="@+id/icCancelado"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_cancelado"
            android:gravity="center"
            android:text="@string/icon_cancelado"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
