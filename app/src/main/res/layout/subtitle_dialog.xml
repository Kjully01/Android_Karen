            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_maxima_critica_alerta"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/imgSucesso" />

        <TextView
            android:id="@+id/tvFalhaParcial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/falha_parcial"
            app:layout_constraintBottom_toBottomOf="@id/imgFalhaParcial"
            app:layout_constraintStart_toEndOf="@id/imgFalhaParcial"
            app:layout_constraintTop_toTopOf="@id/imgFalhaParcial" />

        <TextView
            android:id="@+id/imgFalhaTotal"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_cancelado"
            android:gravity="center"
            android:text="@string/icon_alert"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/imgFalhaParcial" />

        <TextView
            android:id="@+id/tvFalhaTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
