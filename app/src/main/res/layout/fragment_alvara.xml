<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:paddingHorizontal="16dp"
    tools:context=".presentation.ui.fragment.AlvaraFragment">

    <LinearLayout
        android:id="@+id/linearOne"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/maxima_empty_state" />

        <TextView
            style="@style/title_alvara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nada_encontrado" />

        <TextView
            style="@style/subtitle_alvara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nao_ha_alvara" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>